    <div id="error_explanation">
      <h2>
        <%= pluralize(@planet.errors.count, "error") %> prohibited
        this planet from being saved:
      </h2>
      <ul>
        <% @planet.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= form.label :name %><br>
