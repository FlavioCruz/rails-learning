
<h1>New Planet</h1>


<%= form_with scope: :planet, url: planets_path,  local: true do |form| %>
  <% if @planet.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@planet.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @planet.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
